Options +FollowSymLinks
Options +Indexes
Options -MultiViews
RewriteEngine On

RewriteEngine on

RewriteRule ^inicio$ index.php
RewriteRule ^elige-zona$ index-zona.php
RewriteRule ^elige-aire$ index-aire.php
RewriteRule ^elige-habitacion$ index-habitacion.php
RewriteRule ^elige-opciones$ index-opciones.php
RewriteRule ^aire-acondicionado$ index-aireacondicionado.php

<IfModule mod_expires.c>
    ExpiresActive on
 
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/svg "access plus 1 month"
    ExpiresByType image/ico "access plus 1 month"
  ExpiresByType image/x-icon "access plus 1 month"
  ExpiresByType text/html "access plus 600 seconds"
     
     # Fonts
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"

  # CSS, JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"

  # Others
  ExpiresByType application/pdf "access plus 1 month"
  
</IfModule>

server {
   
    location ~ \.php$ {
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php/php7.2-fpm.sock;
        fastcgi_index index.php;
        include fastcgi_params;
    }
    
     location /elige {
      rewrite ^/elige-zona$ /index-zona.php;
      rewrite ^/elige-aire$ /index-aire.php;
      rewrite ^/elige-habitacion$ /index-habitacion.php;
      rewrite ^/elige-opciones$ /index-opciones.php;
    }
    
    location /aire {
      rewrite ^/aire-acondicionado$ /index-aireacondicionado.php;
    }

    location ~ /\.(?!well-known).* {
        deny all;
    }
    

}



